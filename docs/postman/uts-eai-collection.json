{
  "info": {
    "name": "UTS EAI - API Collection",
    "description": "Postman collection for UTS EAI project APIs",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"username\": \"admin\", \"password\": \"admin123\"}"
            },
            "url": {
              "raw": "http://localhost:3000/auth/login",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "User Service",
      "item": [
        {
          "name": "Get All Users",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "http://localhost:3000/api/user-service/users",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "user-service", "users"]
            }
          }
        },
        {
          "name": "Create User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"name\": \"New User\", \"email\": \"newuser@example.com\"}"
            },
            "url": {
              "raw": "http://localhost:3000/api/user-service/users",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "user-service", "users"]
            }
          }
        }
      ]
    },
    {
      "name": "Payment Service",
      "item": [
        {
          "name": "Get All Transactions",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "http://localhost:3000/api/payment-service/transactions",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "payment-service", "transactions"]
            }
          }
        },
        {
          "name": "Create Transaction",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"user_id\": 1, \"amount\": 50.0, \"type\": \"credit\", \"description\": \"Test transaction\"}"
            },
            "url": {
              "raw": "http://localhost:3000/api/payment-service/transactions",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "payment-service", "transactions"]
            }
          }
        }
      ]
    }
  ]
}
